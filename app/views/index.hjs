<!DOCTYPE html>
<html>
  <head>
    <title>VMShare</title>
    <link rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css' />
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <div class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">VMShare</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="vote">
            <!-- http://blog.nodeknockout.com/post/35364532732/protip-add-the-vote-ko-badge-to-your-app -->
            <iframe src="http://nodeknockout.com/iframe/nkzawa" frameborder=0 scrolling=no allowtransparency=true width=115 height=25></iframe>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
        {{#user}}
          <li><a href="#"><img class="avatar-small" src="{{user.avatarUrl}}" alt="{{user.username}}"/>{{user.username}}</a></li>
          <li><a href="/logout">Logout</a></li>
        {{/user}}
        {{^user}}
          <li><a href="/login">Login</a></li>
        {{/user}}
        </ul>
      </div>
    </div>

  {{#user}}
    <div class="container">
      <div class="page-header">
        <a class="btn btn-primary btn-lg" href="/vms/new">Create a new VM</a>
      </div>
    </div>
  {{/user}}
  {{^user}}
    <div class="jumbotron">
      <div class="container">
        <h1>Share VM, collaborate through Terminals.</h1>
        <a class="btn btn-success btn-lg" href="/login">Sign in with GitHub</a>
      </div>
    </div>
  {{/user}}
    <div class="container">
      <div class="vms"></div>
    </div>

    <div class="templates" style="display:none;">
      <script type="text/plain" class="vm">
        <div class="vm">
          <h3 class="h4"><a href="/vms/{%vm._id%}">{%vm._creator.username%} / {%vm.name%}</a></h3>
          <ul class="users clearfix">{%&usersHtml%}</ul>
          <p>{%created%}</p>
        </div>
      </script>
      <script type="text/plain" class="user">
        <li class="user"><img src="{%user.avatarUrl%}" alt="{%user.username%}"/></li>
      </script>
    </div>
    <hr/>

    <script src="/signal.io/socket.io.js"></script>
    <script src="/bower_components/jquery/jquery.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/bower_components/hogan/web/builds/2.0.0/hogan-2.0.0.js"></script>
    <script src="/bower_components/moment/moment.js"></script>
    <script type="text/javascript">
      var socket = io('/vms', {path: '/signal.io'});
      var hoganOption = {delimiters: '{% %}'};

      socket.on('connect', function() {
        var $templates = $('.templates');
        var vmTemplate = Hogan.compile($templates.find('.vm').text(), hoganOption);
        var userTemplate = Hogan.compile($templates.find('.user').text(), hoganOption);
        var $vms = $('.vms');

        function createVmHtml(vm) {
          var usersHtml = $.map(vm.users, function(user) {
            return userTemplate.render({user: user});
          }).join('');

          return vmTemplate.render({
            vm: vm,
            usersHtml: usersHtml,
            created: moment(vm.created).fromNow()
          });
        }

        socket.emit('index', function(err, vms) {
          if (err) {
            console.log(err);
            return;
          }

          var vmsHtml = $.map(vms, createVmHtml).join('');
          $vms.html(vmsHtml);
        });
      });
    </script>
  </body>
</html>
